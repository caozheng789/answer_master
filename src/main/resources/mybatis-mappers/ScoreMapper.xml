<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.boot.security.server.dao.ScoreDao">

	<sql id="where">
		<where>
			<if test="params.sid != null and params.sid != ''">
				and sid = #{params.sid} 
			</if>
			<if test="params.uid != null and params.uid != ''">
				and uid = #{params.uid} 
			</if>
			<if test="params.pid != null and params.pid != ''">
				and pid = #{params.pid} 
			</if>
			<if test="params.mark != null and params.mark != ''">
				and mark = #{params.mark} 
			</if>
			<if test="params.create_time != null and params.create_time != ''">
				and create_time = #{params.createTime} 
			</if>
		
		</where>
	</sql>

	<select id="count" resultType="int">
		select count(1) from score t
		<include refid="where" />
	</select>

	<select id="list" resultType="Score">
		select * from score t
		<include refid="where" />
		${params.orderBy}
		limit #{offset}, #{limit}
	</select>

	<update id="update">
		update score t
		<set>
			<if test="sid != null">
				sid = #{sid}, 
			</if>
			<if test="uid != null">
				uid = #{uid}, 
			</if>
			<if test="pid != null">
				pid = #{pid}, 
			</if>
			<if test="mark != null">
				mark = #{mark}, 
			</if>
			<if test="createTime != null || createTime != ''">
				create_time = #{createTime}, 
			</if>

		</set>

		where t.sid = #{sid}
	</update>

</mapper>
